<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <shape
            android:shape="rectangle">
            <!-- 圆角半径 -->
            <corners
                android:radius="@dimen/_3dp"/>
            <solid android:color="@color/white"/>
            <padding
                android:bottom="@dimen/_15dp"
                android:left="@dimen/_15dp"
                android:right="@dimen/_15dp"
                android:top="@dimen/_15dp"/>
            <stroke
                android:width="0.5dp"
                android:color="@color/category_line_color"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape
            android:shape="rectangle">
            <!-- 圆角半径 -->
            <corners
                android:radius="@dimen/_3dp"/>
            <solid android:color="@color/white"/>
            <padding
                android:bottom="@dimen/_15dp"
                android:left="@dimen/_15dp"
                android:right="@dimen/_15dp"
                android:top="@dimen/_15dp"/>
            <stroke
                android:width="0.5dp"
                android:color="@color/app_do_color"/>
        </shape>
    </item>
</selector>
